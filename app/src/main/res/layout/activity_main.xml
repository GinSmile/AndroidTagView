<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ginsmile.androidtagview.MainActivity">

    <com.ginsmile.androidtagview.HotTagView
        android:id="@+id/htv"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_size="8sp"
        app:text_color="#F1FFFF"
        app:stroke_width="2dp"
        app:line_color="@color/colorPink"
        app:background_color="@color/colorPink"
        app:textview_padding_left="5dp"
        app:textview_padding_right="5dp"
        app:textview_margin_left="3dp"
        app:textview_margin_right="3dp"
        app:textview_margin_top="5dp">
    </com.ginsmile.androidtagview.HotTagView>


    <com.ginsmile.androidtagview.HotTagView
        android:id="@+id/htv2"
        android:layout_below="@id/htv"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_size="8sp"
        app:text_color="#F1FFFF"
        app:stroke_width="3dp"
        app:line_color="@color/colorPrimary"
        app:background_color="@color/colorPink"
        app:textview_padding_left="8dp"
        app:textview_padding_right="8dp"
        app:textview_margin_left="1dp"
        app:textview_margin_right="1dp"
        app:textview_margin_top="2dp">
    </com.ginsmile.androidtagview.HotTagView>

    <com.ginsmile.androidtagview.HotTagView
        android:id="@+id/htv3"
        android:layout_below="@id/htv2"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_size="8sp"
        app:text_color="#010101"
        app:stroke_width="3dp"
        app:line_color="#d1d1d1"
        app:background_color="#d1d1d1"
        app:textview_margin="5dp"
        app:textview_padding="10dp">
    </com.ginsmile.androidtagview.HotTagView>
</RelativeLayout>
